extends ../layout

block content
  .page-header
    h3 Forgot password
  form(method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label.control-label(for='email') Email
      input.form-control(type='email', name='email', id='email', placeholder='Email', autofocus, required)
    .form-group
      button.btn.btn-primary(type='submit')
        i.fa.fa-key
        | Reset Password
